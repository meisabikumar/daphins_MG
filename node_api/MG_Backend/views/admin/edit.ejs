<%- include('../utils/header') %>

    <form class="splash-container " action="/admin/<%= response._id %>/edit"  method="POST" enctype="application/x-www-form-urlencoded">
        <div class="card ">
            <div class="card-header">
                <h3 class="mb-1">Edit Admin</h3>
            </div>
            <% if(error){ %>
                <div class="error">
                    <p style="color: red;"><%= error %></p>
                </div>
            <% } %> 
            <div class="card-body">
                <div class="form-group">
                    <input class="form-control form-control-lg"  type="text" name="username" placeholder="Username" autocomplete="off" value="<%= response.username %>" disabled  required>
                </div>
                
                <div class="form-group">
                    <input class="form-control form-control-lg"  type="text" name="first_name" placeholder="First name" value="<%= response.first_name %>" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text"  name="last_name" placeholder="Last name"  value="<%= response.last_name %>" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="email"  name="email" placeholder="email" value="<%= response.email %>" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" id="password" type="password" onkeyup="passwordCheck()"  name="password" placeholder="password" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" id="re_password" type="password" onkeyup="passwordCheck()"  name="re_password" placeholder="retype password" autocomplete="off" required>
                </div>
                <div class="form-group pt-2">
                    <button class="btn btn-block btn-primary" id="submit" type="submit" disabled>Save</button>
                </div>
        </div>
        
    </form>
    <script>
        let email = document.querySelector("#email")
        let password = document.querySelector("#password")
        let re_password = document.querySelector("#re_password")
        let submit = document.querySelector('#submit')
        function passwordCheck(){
            if(password.value == re_password.value && password.value!= ""){
                submit.disabled = false
            } else{
                submit.disabled = true
            }
        }
        
    </script>